# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = crlf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{cpp,h,c,cs,vb}]
charset = utf-8
indent_style = space
indent_size = 2
indent_brace_style = K&R

[*.{sh,py}]
end_of_line = lf
insert_final_newline = true

[rhino4/RhinoApplication/{rhinocode,yak}]
end_of_line = lf
insert_final_newline = true

[*.{vcxproj,csproj,vbproj}]
end_of_line = crlf
indent_style = space
indent_size = 2
